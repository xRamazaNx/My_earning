<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:layout_marginEnd="5dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginStart="5dp"
    android:layout_marginTop="3dp"
    android:background="@drawable/backgraund_for_card"
    android:orientation="vertical">

    <TextView
        android:id="@+id/card_info_button"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="end"
        android:layout_marginBottom="-20dp"
        android:background="@mipmap/info_button"
        android:textSize="18sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/id_name_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="27dp"
        android:layout_marginLeft="27dp"
        android:layout_marginRight="27dp"
        android:layout_marginStart="27dp"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:text="у напарника на работе"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginBottom="3dp"
        android:layout_marginEnd="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="1dp"
        android:background="@drawable/gradient"
        android:orientation="horizontal">
    </LinearLayout>

    <TextView
        android:id="@+id/id_date_card"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:gravity="center"
        android:padding="3dp"
        android:textColor="@color/color_date_arhive_card"
        android:textSize="14sp"
        tools:text="4 октября  -  4 ноября"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:paddingTop="5dp">

        <TextView
            android:id="@+id/card_title_vsego"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/EARNING"
            android:textColor="@color/color_text_zagolovki_zarplata"
            android:textSize="12sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/card_title_avans"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.9"
            android:gravity="center"
            android:text="@string/cash_advance"
            android:textColor="@color/color_text_zagolovki_zarplata"
            android:textSize="12sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/card_title_ostatok"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/THE_REST"
            android:textColor="@color/color_text_zagolovki_zarplata"
            android:textSize="12sp"
            android:textStyle="bold"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/color_polosa_razdelitel"
        android:orientation="horizontal">
    </LinearLayout>

    <LinearLayout
        android:id="@+id/obshee_dengi"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginStart="5dp"
        android:background="@color/cent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/id_summ_all_money_card"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="1.1"
            android:gravity="center"
            android:textAlignment="gravity"
            android:textColor="@color/color_vsego_card"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:layout_marginBottom="3dp"
            android:background="@color/color_polosa_razdelitel"
            android:orientation="horizontal">
        </LinearLayout>

        <TextView
            android:id="@+id/id_summ_avans_card"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textAlignment="gravity"
            android:textColor="@color/color_avans_card"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:layout_marginBottom="3dp"
            android:background="@color/color_polosa_razdelitel"
            android:orientation="horizontal">
        </LinearLayout>

        <TextView
            android:id="@+id/id_summ_money_k_vidache_card"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="1.1"
            android:gravity="center"
            android:textAlignment="gravity"
            android:textColor="@color/color_ostatok_card"
            android:textSize="18sp"
            android:textStyle="bold"/>

    </LinearLayout>

</LinearLayout>