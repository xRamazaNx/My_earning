<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/id_schet_1_dey"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="-1px">


    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/id_numeraciya"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:background="@drawable/shape"
            android:gravity="center"
            android:padding="1dp"
            android:textColor="@color/cent"
            android:textSize="14sp"
            android:textStyle="italic"
            tools:text="73" />

        <TextView
            android:id="@+id/id_colichestvo_rulonov_1_kolona"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="-1px"
            android:layout_marginLeft="-1px"
            android:layout_marginEnd="-1px"
            android:layout_marginRight="-1px"
            android:layout_weight="10"
            android:background="@drawable/shape"
            android:gravity="center"
            android:padding="1dp"
            android:textColor="@color/text"
            android:textSize="14sp"
            tools:text="100" />

        <TextView
            android:id="@+id/id_avans"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:background="@drawable/shape"
            android:gravity="center"
            android:padding="1dp"
            android:textColor="@color/color_avans_zapisi"
            android:textSize="14sp"
            tools:text="100" />

        <TextView
            android:id="@+id/id_comment_1_dey"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="-1px"
            android:layout_marginLeft="-1px"
            android:layout_marginEnd="-1px"
            android:layout_marginRight="-1px"
            android:layout_weight="10"
            android:background="@drawable/shape"
            android:gravity="center"
            android:padding="1dp"
            android:textColor="@color/text"
            android:textSize="12sp"
            tools:text="4 рулона 4х4 и еще арршрыв шоово орщцв" />

        <TextView
            android:id="@+id/id_data"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="11"
            android:background="@drawable/shape"
            android:gravity="center"
            android:lineSpacingExtra="-1sp"
            android:padding="1dp"
            android:textAllCaps="false"
            android:textColor="@color/text"
            android:textSize="12sp"
            android:textStyle="italic"
            tools:text="чт, 12.11.2017" />

    </LinearLayout>


</LinearLayout>